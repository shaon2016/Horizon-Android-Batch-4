<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AccountActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/amount"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginStart="16dp"
              android:id="@+id/tvAmountHeader"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/_35_lakhs"
              app:layout_constraintStart_toEndOf="@+id/tvAmountHeader"
              android:layout_marginStart="16dp"
              app:layout_constraintTop_toTopOf="@+id/tvAmountHeader"/>

    <TextView
              android:id="@+id/tvCashOutHeader"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/cash_out_in_this_month"
              app:layout_constraintTop_toBottomOf="@id/tvAmountHeader"
              android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="@+id/tvAmountHeader"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/_10_lakhs"
              app:layout_constraintTop_toBottomOf="@id/tvCashOutHeader"
              android:layout_marginTop="8dp"
              android:id="@+id/tvCashOut"
              app:layout_constraintStart_toStartOf="@+id/tvAmountHeader"
    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/amount"
              app:layout_constraintStart_toStartOf="@id/tvCashOutHeader"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/tvCashOut"
              android:id="@+id/tvDepositHeader" />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/_35_lakhs"
              app:layout_constraintStart_toEndOf="@+id/tvDepositHeader"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="@+id/tvDepositHeader"/>
</androidx.constraintlayout.widget.ConstraintLayout>