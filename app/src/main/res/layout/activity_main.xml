<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <ImageView android:layout_width="0dp"
               android:src="@color/colorAccent"
               android:layout_height="260dp" app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:id="@+id/ivOrderFood"/>


    <TextView android:layout_width="wrap_content"
              android:text="@string/title"
              android:paddingTop="16dp"
              android:paddingStart="16dp"
              android:textSize="18sp"
              android:id="@+id/tvFlowerTitleHeader"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/ivOrderFood"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tvFlowerTitle"
              android:paddingTop="16dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@+id/tvFlowerTitleHeader"
              app:layout_constraintEnd_toEndOf="parent"
              android:textSize="18sp"
              android:layout_marginStart="16dp"
              app:layout_constraintBottom_toBottomOf="@+id/tvFlowerTitleHeader"
              app:layout_constraintTop_toTopOf="@+id/tvFlowerTitleHeader"
              android:text="@string/rose"
              app:layout_constraintHorizontal_bias="0.0"/>

    <TextView android:layout_width="wrap_content"
              android:text="@string/type"
              android:paddingTop="4dp"
              android:paddingStart="16dp"
              android:textSize="18sp"
              android:id="@+id/tvFlowerTypeHeader"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/tvFlowerTitle"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tvFlowerType"
              android:paddingTop="4dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@+id/tvFlowerTypeHeader"
              app:layout_constraintEnd_toEndOf="parent"
              android:textSize="18sp"
              android:layout_marginStart="16dp"
              app:layout_constraintBottom_toBottomOf="@+id/tvFlowerTypeHeader"
              app:layout_constraintTop_toTopOf="@+id/tvFlowerTypeHeader"
              android:text="@string/flower"
              app:layout_constraintHorizontal_bias="0.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>